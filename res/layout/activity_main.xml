<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<fragment android:name="com.espersoftworks.android.app.hourlynotification.fragment.AdFragment"
	          android:id="@+id/ad_fragment"
	          android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true" />
	<fragment android:name="com.espersoftworks.android.app.hourlynotification.fragment.SettingsFragment" 
	          android:id="@+id/settings_fragment"
              android:layout_width="match_parent"
        	  android:layout_height="match_parent"
              android:layout_above="@+id/ad_fragment" />
</RelativeLayout>
